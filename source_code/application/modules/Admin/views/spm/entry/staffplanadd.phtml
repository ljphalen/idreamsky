        <script>
            /* 请求链接 */
            var staffPlanPostUrl = baseurl + '<?php echo $staffPlanPostUrl; ?>'; // 提交表单
            layui.use('upload', function () {
                var $ = layui.jquery,
                    upload = layui.upload;
                var filename = '';
                upload.render({
                    elem: '#selectFile',
                    data: {
                        'token': token
                    },
                    url: staffPlanPostUrl,
                    auto: false,
                    accept: 'file', //普通文件
                    exts: 'xls|xlsx', //只允许上传excel文件
                    bindAction: '#submitFile',
                    choose: function (obj) {
                        //预读本地文件，如果是多文件，则会遍历。(不支持ie8/9)
                        obj.preview(function (index, file, result) {
                            filename = file.name +
                                '<span style="color:darkgreen;">（未导入）</span>';
                            $("#filename").html(filename);
                        });
                        //                    layer.load();
                    },
                    done: function (data) {
                        layer.closeAll('loading'); //关闭loading
                        if (data.success) {
                            $("#filename").html(filename +
                                "<span style='color:darkgreen;'>（导入成功）</span>");
                            layer.msg(data.msg);
                        } else {
                            $("#filename").html(filename + "<span style='color:red;'>（导入失败）</span>");
                            layer.open({
                                type: 1,
                                offset: 'auto',
                                id: 'layerDemoauto',
                                maxmin: true, //开启最大化最小化按钮
                                area: '650px',
                                content: '<div style="padding: 20px 20px;">' + data.msg +
                                    '</div>',
                                btn: '确定',
                                btnAlign: 'c', //按钮居中                                    
                                shade: 0, //不显示遮罩
                                yes: function () {
                                    layer.closeAll();
                                }
                            });
                        }
                    },
                    error: function (index, upload) {
                        layer.closeAll('loading'); //关闭loading
                    }
                });
                // 取消
                $("#submitFile").click(function () {
                    var filename = $("#filename").html();
                    if (filename == '') {
                        layer.msg("请选择导入文件");
                    } else {
                        layer.load();
                    }
                });
            });
        </script>
